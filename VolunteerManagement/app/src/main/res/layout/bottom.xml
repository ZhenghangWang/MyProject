<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal" >

    <LinearLayout 
        android:id="@+id/id_tab_weixin"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1">
        <ImageButton 
            android:id="@+id/id_tab_weixin_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:clickable="false"
            android:src="@drawable/tab_01_pressed"
            android:background="#00000000"/>
        <TextView
            android:id="@+id/id_tab_weixin_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Approval"/>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/id_tab_frd"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1">
        <ImageButton 
            android:id="@+id/id_tab_frd_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:clickable="false"
            android:src="@drawable/tab_02_normal"
            android:background="#00000000"/>
        <TextView
            android:id="@+id/id_tab_frd_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Message"/>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/id_tab_setting"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1">
        <ImageButton 
            android:id="@+id/id_tab_setting_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:clickable="false"
            android:src="@drawable/tab_03_normal"
            android:background="#00000000"/>
        <TextView
            android:id="@+id/id_tab_setting_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Resolve"/>
    </LinearLayout>

</LinearLayout>
